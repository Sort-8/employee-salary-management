<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.salary.dao.DeptDao">

    <select id="getAllDept" resultType="java.util.HashMap">
        select *from dept
        where del_flag=0
    </select>

    <select id="getPageDept" resultType="java.util.HashMap">
        select *from dept
        where del_flag=0
    </select>

    <select id="getOneDept" resultType="java.util.HashMap" parameterType="String">
        select* from dept
        where dept_name=#{dept_name}
    </select>

    <insert id="insertDept" parameterType="java.util.HashMap">
        insert dept(
            dept_name,
            leader,
            phone,
            email,
            status,
            del_flag,
            creater,
            create_time,
            remark
            ) value(
            #{dept_name},
            #{leader},
            #{phone},
            #{email},
            #{status},
            #{del_flag},
            #{creater},
            #{create_time},
            #{remark}
        )
    </insert>
</mapper>