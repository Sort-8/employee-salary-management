<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.salary.dao.RoleDao">
    
    <select id="getAllRole" resultType="java.util.HashMap">
        select *from role
        where del_flag=0
    </select>

    <select id="getPageRole" resultType="java.util.HashMap">
        select *from role
        where del_flag=0
    </select>

    <select id="getOneRole" resultType="java.util.HashMap" parameterType="String">
        select* from role
        where role_key=#{role_key}
    </select>

    <insert id="insertRole" parameterType="java.util.HashMap">
        insert role(
            role_key,
            role_name,
            status,
            del_flag,
            creater,
            create_time,
            remark
            ) value(
            #{role_key},
            #{role_name},
            #{status},
            #{del_flag},
            #{creater},
            #{create_time},
            #{remark}
        )
    </insert>
</mapper>