<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.salary.dao.RoleDao">
    
    <select id="getAllRole" resultType="java.util.HashMap">
        select *from role
        where del_flag=0
    </select>

    <select id="getPageRole" resultType="java.util.HashMap">
        select *from role
        where del_flag=0
    </select>

    <select id="getOneRole" resultType="java.util.HashMap" parameterType="String">
        select* from role
        where role_key=#{role_key}
    </select>

    <select id="searchRole" parameterType="java.util.List" resultType="java.util.HashMap">
        SELECT role.*
        FROM role
        WHERE role.del_flag=0
        <foreach collection="list" index="index" item="item">
            <if test="item.searchType != null and item.searchType != ''
             and item.searchContent != null and item.searchContent != ''">
                and ${item.searchType} like CONCAT('%', #{item.searchContent},'%')
            </if>
        </foreach>
        ORDER BY role_id ASC
    </select>

    <insert id="insertRole" parameterType="java.util.HashMap">
        insert role(
            role_key,
            role_name,
            status,
            del_flag,
            creater,
            create_time,
            remark
            ) value(
            #{role_key},
            #{role_name},
            #{status},
            #{del_flag},
            #{creater},
            #{create_time},
            #{remark}
        )
    </insert>

    <select id="getUserRole" resultType="java.util.HashMap">
        select user_role.*
        from user_role
        where role_id in
        <foreach collection="array" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <update id="changeRoleStatus" parameterType="java.util.HashMap">
        update role
        set status=#{status},
        updater=#{updater},
        update_time=NOW()
        where role_id=#{role_id}
    </update>

    <update id="deleteRole">
        update role
        set del_flag=1,
        update_time=NOW()
        where role_id in
        <foreach collection="array" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>
</mapper>